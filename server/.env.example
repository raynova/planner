# Database connection string from Render
DATABASE_URL=postgresql://user:password@host:5432/database

# JWT secret for session tokens (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your-secret-key-here

# SendGrid API key for magic link emails
SENDGRID_API_KEY=your-sendgrid-api-key

# Frontend URL for magic link redirects
CLIENT_URL=http://localhost:5173

# Email sender address (must be verified in SendGrid)
FROM_EMAIL=noreply@yourdomain.com

# Node environment
NODE_ENV=development
